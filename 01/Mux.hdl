/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    // Put your code here:
    And(a = b, b = sel, out = bAndsel);
    Not(in = sel , out = Notsel);
    And(a = Notsel, b = a, out = NotselAnda);
    Or(a = bAndsel , b = NotselAnda, out = out);
}